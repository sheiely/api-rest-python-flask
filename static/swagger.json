          },
          "criacao_data": {
            "type": "Date",
            "description": "Data que foi alugado",
            "example": "2017-01-01",
            "format": "date",
            "pattern": "YYYY-MM-DD"
          },
          "vencimento_data": {
            "type": "Date",
            "description": "Data que vai ser vencido",
            "example": "2017-01-14",
            "format": "date",
            "pattern": "YYYY-MM-DD"
          }
        }
      },
      "Avaliacao": {
